pipeline {
    agent any
    
    stages {
        stage('Get Code') {
            steps {
                git branch: 'master', url: 'https://github.com/Izangildev/todo-list-aws-UNIR.git'
                stash name: 'code', includes: '**'
            }
        }

        stage('Deploy Production') {
            steps {
                unstash name: 'code'
                sh '''
                    sam build
                    sam deploy --config-env production --no-fail-on-empty-changeset
                '''
                
                // Guardamos la URL generada en un archivo para usarla en otro agente
                sh '''
                    aws cloudformation describe-stacks \
                      --stack-name todo-list-aws-production \
                      --query 'Stacks[0].Outputs[?OutputKey==`BaseUrlApi`].OutputValue' \
                      --region us-east-1 \
                      --output text > base_url.txt
                '''
                
                // Hacemos stash del archivo para pasarlo a otro agente
                stash includes: 'base_url.txt', name: 'base_url'
            }
        }

        stage('REST Tests') {
            agent { label 'rest' }
            steps {
                unstash name: 'code'
                unstash 'base_url'
                
                sh '''
                    export BASE_URL=$(cat base_url.txt)
                    pytest --junitxml=result-rest.xml -m read test/integration/todoApiTest.py
                '''
                junit 'result-rest.xml'
            }
        }
    }
}
